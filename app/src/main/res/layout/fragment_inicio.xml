<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".inicio.InicioFragment">

    <!-- Layout categorias   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titulo_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:text="CategorÃ­as"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize=".5dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupInicio"
                chipSpacingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/todos"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Todas"
                    android:textColor="@color/white"
                    app:checkedIconVisible="true"
                    app:chipBackgroundColor="@color/violeta_fuerte"
                    app:chipCornerRadius="20dp"
                    app:chipStrokeWidth="0dp" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- layout de las donaciones   -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_inicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>